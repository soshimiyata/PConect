<% if user_signed_in? %>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: search_path, method: :get, local: true, class: "mb-3" do |f| %>
        <div class="input-group">
          <%= f.text_field :content, class: "form-control", placeholder: "検索キーワード" %>
          <div class="input-group-append">
            <%= f.select :model, options_for_select({ "User" => "user", "Post" => "post" }, selected: "post"), class: "form-select" %>
          </div>
          <div class="input-group-append">
            <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }, selected: "partial"), class: "form-select" %>
          </div>
          <div class="input-group-append">
            <%= f.submit '検索', class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
