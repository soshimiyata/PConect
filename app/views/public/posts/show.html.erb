<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1><%= @post.user.name %>さんの投稿</h1>
      <h3><%= @post.title %></h3>
      <% @post.post_images.each do |post_image| %>
        <div class="card mb-3">
          <%= image_tag post_image.image, class: "card-img-top", alt: "Post Image", style: "max-height: 400px;" %>
          <div class="card-body">
            <%= post_image.text %>
          </div>
        </div>
      <% end %>
      <% if @post.tags.present? %>
        <i class="fas fa-tag">
          <% @post_tags.each do |tag| %>
            <%= link_to tag.name,search_tag_path(tag_id: tag.id)%>
          <% end %>
        </i>
      <% end %>
      <% if @post.user == current_user %>
        <%= link_to 'Edit', edit_post_path, class: "btn btn-primary" %>
      <% end %>
      <div class="mt-3">
        <span id="favorite_btn_<%= @post.id %>">
          <%= render "public/favorites/btn", post: @post %>
        </span>
      </div>
      <div class="mt-3">
        <span id="comment_counter">
          <%= render "public/post_comments/counter", post: @post %>
        </span>
      </div>
      <div id="comment_index" class="mt-3">
        <%= render 'public/post_comments/index', post: @post %>
      </div>
      <div class="mt-3">
        <%= render 'public/post_comments/form', post: @post, post_comment: @post_comment %>
      </div>
    </div>
  </div>
</div>
