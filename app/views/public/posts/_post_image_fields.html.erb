<div class="nested-fields">
  <div class="card">
    <div class="card-body">
      <%= f.label :image %><br>
      <%= f.file_field :image, class: "form-control-file" %>
    </div>
    <div class="card-body">
      <%= f.label :text %><br>
      <%= f.text_area :text, class: "form-control" %>
    </div>
    <div class="card-footer text-right">
      <%= link_to_remove_association "削除", f, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>
