<div class="container mt-5" id="container">
  <div class="row">
    <div class="col">
      <div class="mt-5">
        <h2><strong>みんなの新着投稿</strong></h2>
        <div class="row mt-4">
          <ul class="slider">
            <% @new_posts.each do |post| %>
              <li>
                <%= link_to post_path(post) do %>
                  <p class="caption mx-2"><%= image_tag post.post_images.first.image, format: 'jpeg', size: '200x200' %></p>
                <% end %>
                <p class="caption"><%= post.title %></p>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'public/posts/index',posts: @posts %>
<div class="container mt-3 mb-3"> 
  <div class="row justify-content-center">
    <div class="col-md-6 text-center"> 
      <%= link_to "もっと見る", posts_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>