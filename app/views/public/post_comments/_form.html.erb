<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= form_with model: [post, post_comment], url: post_post_comments_path(post), local: false do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, rows: 5, placeholder: "コメントをここに", class: "form-control", id: "comment_textarea", style: "width: 100%;" %>
        </div>
        <%= f.submit "送信", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
